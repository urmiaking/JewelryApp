@using System.Timers
@using System.Globalization
@using System.Security.Claims

<MudDrawer @bind-Open="@DrawerOpen" Elevation="5" OpenMiniOnHover="false" Breakpoint="Breakpoint.Xs" Variant="@DrawerVariant.Mini" Fixed="true" PreserveOpenState="true">
    <MudNavMenu Color="Color.Primary">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">داشبورد</MudNavLink>
        <MudNavLink Href="/settings" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Settings">تغيير رمز عبور</MudNavLink>
        <MudNavLink Href="/logout" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Logout">خروج</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {

    [Parameter]
    public bool DrawerOpen { get; set; } = false;
}