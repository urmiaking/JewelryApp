@inherits UserComponentBase

<MudGrid>
    <MudItem xs="12" sm="6" lg="6" md="4">
        <MudPaper Elevation="2" Class="pa-4">
            <MudChart ChartType="ChartType.Line" ChartSeries="@Series" XAxisLabels="XAxisLabels" Width="100%" Height="300"></MudChart>
            <MudMenu Label="نوع آمار" Dense="true" Size="Size.Small" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.KeyboardArrowUp">
                <MudMenuItem IconSize="Size.Small" Icon="@Icons.Material.Filled.CalendarViewWeek" IconColor="Color.Success" OnClick="() => OnClickMenu(CaretChartType.Weekly)">هفتگی</MudMenuItem>
                <MudMenuItem IconSize="Size.Small" Icon="@Icons.Material.Filled.CalendarViewMonth" IconColor="Color.Info" OnClick="() => OnClickMenu(CaretChartType.Monthly)">ماهانه</MudMenuItem>
                <MudMenuItem IconSize="Size.Small" Icon="@Icons.Material.Filled.CalendarViewDay" IconColor="Color.Surface" OnClick="() => OnClickMenu(CaretChartType.Yearly)">سالانه</MudMenuItem>
            </MudMenu>
        </MudPaper>
    </MudItem>
</MudGrid>