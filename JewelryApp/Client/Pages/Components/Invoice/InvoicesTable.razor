@inherits UserComponentBase

<MudDataGrid Outlined="true" Class="@Class" Items="@_invoices?.Take(4)" Dense="true" Hover="true" Bordered="true" Filterable="Filterable">
    <ToolBarContent>
        <MudText Typo="Typo.h6">لیست فاکتورها</MudText>
        <MudSpacer />
        @if (IsInInvoicePage)
        {
            <MudButton Color="Color.Primary" EndIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Href="/invoices/add">افزودن</MudButton>
        }
        else
        {
            <MudButton Color="Color.Primary" EndIcon="@Icons.Material.Filled.ArrowBack" Variant="Variant.Filled">بیشتر</MudButton>
            
        }
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Index" Title="ردیف" />
        <PropertyColumn Property="x => x.InvoiceId" Title="شماره فاکتور" />
        <PropertyColumn Property="x => x.BuyerName" Title="نام خریدار" />
        <PropertyColumn Property="x => x.BuyerPhone" Title="شماره همراه" />
        <PropertyColumn Property="x => x.TotalCost" Title="مبلغ کل" />
        <PropertyColumn Property="x => x.ProductsCount" Title="تعداد اجناس" />
        <PropertyColumn Property="x => x.BuyDate" Title="تاریخ خرید" />
        <TemplateColumn CellClass="justify-center" Title="عملیات">
            <CellTemplate>
                <MudStack Row>
                    <MudButton Size="@Size.Small" EndIcon="@Icons.Material.Filled.Edit" Variant="@Variant.Filled" Color="@Color.Primary">ویرایش</MudButton>
                    <MudButton Size="@Size.Small" EndIcon="@Icons.Material.Filled.Delete" Variant="@Variant.Filled" Color="@Color.Primary">حذف</MudButton>
                    <MudButton Size="@Size.Small" EndIcon="@Icons.Material.Filled.Print" Variant="@Variant.Filled" Color="@Color.Primary">چاپ</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
