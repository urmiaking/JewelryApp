@using JewelryApp.Shared.Enums
@using JewelryApp.Client.ViewModels.Populated
@inherits UserComponentBase

<MudDialog>
    <DialogContent>
        <EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <MudGrid>
                <MudItem xs="12" md="6" lg="6">
                    <MudTextField Label="نام جنس" @bind-Value="Model.Name" For="@(() => Model.Name)" Variant="Variant.Outlined" Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" md="6" lg="6">
                    <MudNumericField Label="وزن" @bind-Value="Model.Weight" For="@(() => Model.Weight)" Variant="Variant.Outlined" Margin="Margin.Dense" />
                </MudItem>
                <MudItem xs="12" md="6" lg="6">
                    <MudSelect T="WageTypeVm" Label="نوع اجرت" @bind-Value="Model.WageType" For="() => Model.WageType" Margin="Margin.Dense" Variant="Variant.Outlined">
                        @foreach (var wageType in WageTypeVm.GetWageTypes())
                        {
                            <MudSelectItem T="WageTypeVm" Value="wageType.Id">@wageType.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6" lg="6">
                    <MudNumericField Label="اجرت" @bind-Value="Model.Wage" For="@(() => Model.Wage)" Variant="Variant.Outlined" Margin="Margin.Dense" Step="1" />
                </MudItem>
                <MudItem xs="12" md="6" lg="6">
                    <MudSelect T="ProductTypeVm" Label="نوع جنس" @bind-Value="Model.ProductType" For="() => Model.ProductType" Margin="Margin.Dense" Variant="Variant.Outlined">
                        @foreach (var productType in ProductTypeVm.GetProductTypes())
                        {
                            <MudSelectItem T="ProductType" Value="productType.Id">@productType.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6" lg="6">
                    <MudSelect T="CaratVm" Label="عیار" @bind-Value="Model.CaratType" For="() => Model.CaratType" Margin="Margin.Dense" Variant="Variant.Outlined">
                        @foreach (var caratType in CaratVm.GetCarats())
                        {
                            <MudSelectItem T="CaratVm" Value="caratType.Id">@caratType.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>

            <MudStack Row Justify="Justify.FlexEnd" Class="mt-5">
                <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Error">لغو</MudButton>
                <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Disabled="@_processing">
                    @if (_processing)
                    {
                        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                        <MudText Class="ms-2">در حال ذخیره</MudText>
                    }
                    else
                    {
                        <MudText>ذخیره</MudText>
                    }
                </MudButton>
            </MudStack>
        </EditForm>
    </DialogContent>
    <DialogActions>
        
    </DialogActions>
</MudDialog>
